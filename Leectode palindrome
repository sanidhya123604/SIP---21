class Solution {
public:
    bool isPalindrome(int x) {
         long int rev=0, rem;
        int temp=x;
        if(x<0)
        {
            return false;
        }
        else
        {
            
        while(x!=0)
        {
            
        rem = x%10;
        rev=rev*10;
        rev=rev+rem ;
        x/=10;
        
        }
        }
         if (temp==rev)
             return true;
        else 
            return false;
        
        
    }
};
